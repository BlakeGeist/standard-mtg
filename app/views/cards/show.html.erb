
<div class="card">

  <div class="card-image-container"><%= image_tag (@card.image_url), class: 'card-image' %></div>

  <div class="card-info">

    <h1 class="card-info-name"><%= @card.name %></h1>

    <p class="card-info-type"><%= @card.originalType %></p>

    <%=raw @card_text %>

    <% if @card.flavor %>

      <p class="card-info-flavor"><em><%= @card.flavor %></em></p>

    <% end %>

  </div>


</div>

<% @card.info.each do |t| %>

  <p><%= t %></p>

<% end %>

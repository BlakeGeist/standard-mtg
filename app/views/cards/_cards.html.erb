<% if user_signed_in? %>

  <% @cards.each do |card| %>

    <%= render 'cards/card', :card => card %>

  <% end %>

<% else %>

  <% @cards.each do |card| %>

    <div class="cards-card">

      <a href="<%= card_path(card) %>">

        <img src="<%= card.image_url %>" />

      </a>

    </div>

  <% end %>

<% end %>

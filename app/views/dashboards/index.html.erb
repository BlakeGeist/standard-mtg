<div class="card-set">

  <% @the_users_cards.each do |pcard| %>

      <div class="cards-card" id="card<%= pcard.card_id %>">

        <% @pcard = Card.find_by! multiverseid: pcard.card_id %>

        <%= @pcard.name %>

        <%= form_for([current_user, pcard], remote: true) do |f| %>

          <div class="add-to-collection">

            <%= f.text_field :amount %>

            <%= f.submit %>

          </div>

        <% end %>

        <div><%= link_to 'Destroy Comment', user_pcard_path(current_user, pcard), :method => :delete, :remote => true %></div>

      </div>

  <% end %>

</div>

<div class="admin-colors">

  <h2>Add a color:</h2>

  <%= form_for(@color) do |f| %>

    <p>

      <%= f.label :color %><br>

      <%= f.text_field :color %>

    </p>

    <p>

      <%= f.submit %>

    </p>

  <% end %>

  <table>

    <tr>

      <th>Color</th>

    </tr>

    <% @colors.each do |color| %>

      <tr>

        <td><%= color.color %></td>

        <td><%= link_to 'Destroy', color, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>

    <% end %>

  </table>

</div>

